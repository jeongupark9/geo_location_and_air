<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/rect_black">


    <TextView
        android:id="@+id/cell_latlng_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="50dp"
        android:background="@drawable/rect_black"
        android:gravity="center_vertical"
        android:paddingStart="5dp"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/cell_address_txt"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginEnd="50dp"
        android:background="@drawable/rect_black"
        android:layout_below="@id/cell_latlng_txt"
        android:gravity="center_vertical"
        android:paddingStart="5dp"
        android:textSize="15sp" />
    <TextView
        android:id="@+id/cell_aqi_txt"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginEnd="50dp"
        android:background="@drawable/rect_black"
        android:layout_below="@id/cell_address_txt"
        android:gravity="center_vertical"
        android:paddingStart="5dp"
        android:textSize="15sp" />
    <Button
        android:id="@+id/cell_remove_data_btn"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_alignParentEnd="true"
        android:background="@android:drawable/ic_menu_close_clear_cancel"
        android:textSize="20sp" />

</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    tools:context=".ui.BFragment">

    <LinearLayout
        android:id="@+id/c_fragment_point_a_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:background="@drawable/rect_black"
        android:orientation="horizontal"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_weight="2"
            android:text="Point A"
            android:textSize="20sp" />
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="8"
            android:background="@drawable/rect_black"
            android:orientation="vertical">
            <TextView
                android:id="@+id/c_fragment_point_a_latlng_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="5dp"
                android:gravity="center_vertical"
                android:background="@drawable/rect_black"
                android:textSize="20sp" />
            <TextView
                android:id="@+id/c_fragment_point_a_location_txt"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:paddingStart="5dp"
                android:gravity="center_vertical"
                android:background="@drawable/rect_black"
                android:textSize="20sp" />
            <TextView
                android:id="@+id/c_fragment_point_a_air_quality_txt"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:paddingStart="5dp"
                android:gravity="center_vertical"
                android:background="@drawable/rect_black"
                android:textSize="20sp" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:background="@drawable/rect_black"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/c_fragment_point_a_layout">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_weight="2"
            android:text="Point B"
            android:textSize="20sp" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="8"
            android:background="@drawable/rect_black"
            android:orientation="vertical">
            <TextView
                android:id="@+id/c_fragment_point_b_latlng_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="5dp"
                android:gravity="center_vertical"
                android:background="@drawable/rect_black"
                android:textSize="20sp" />
            <TextView
                android:id="@+id/c_fragment_point_b_location_txt"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:paddingStart="5dp"
                android:gravity="center_vertical"
                android:background="@drawable/rect_black"
                android:textSize="20sp" />
            <TextView
                android:id="@+id/c_fragment_point_b_air_quality_txt"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:paddingStart="5dp"
                android:gravity="center_vertical"
                android:background="@drawable/rect_black"
                android:textSize="20sp" />
        </LinearLayout>
    </LinearLayout>

    <Button
        android:id="@+id/c_fragment_back_btn"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="Back"
        android:textSize="30sp"
        android:layout_margin="10dp"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>